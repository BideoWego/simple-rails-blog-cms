<%
inputs = [
	{
		:h => f.label(:title),
		:d => f.text_field(:title)
	},
	{
		:h => f.label(:content),
		:d => f.text_area(:content, :id => 'post-content')
	}
]
%>
<%= render :partial => 'shared/form', :locals => {:object => @post, :inputs => inputs } %>

<%= render :partial => 'tinymce', :locals => {:selector => "#post-content" } %>